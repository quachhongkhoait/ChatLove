<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatLove_App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorApp</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="BottomNav" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
<!--        <item name="android:actionBarStyle">@style/CustomActionBar</item>-->
    </style>

    <style name="CustomActionBarStyle" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:titleTextStyle">@style/NoTitleText</item>
        <item name="android:subtitleTextStyle">@style/NoTitleText</item>
    </style>

    <style name="CustomActionBar" parent="android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/CustomActionBarStyle</item>
    </style>

    <style name="NoTitleText">
<!--        <item name="android:textSize">0sp</item>-->
        <item name="android:textColor">#FF0000</item>
    </style>


    <style name="navTextActive">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>


    <style name="navTextInactive">
        <item name="android:textSize">@dimen/_7sdp</item>
    </style>
</resources>